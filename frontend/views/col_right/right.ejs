<% include ./right_style %>

<div id="background">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script>
    function print_data(data) {
      $("#list").empty();

      data.forEach((element,i) => {
        if ($("#search").val()) {
          var reg = new RegExp("(" + $("#search").val() + ")+", "ig");
          if (element.Name.match(reg)) {
            var div = document.createElement("div");
            div.classList.add("object_object");
            div.innerHTML = "<b>" + element.Name + "</b><br>";
            if(i%2==1){
              div.style.background = "#e6ffff";
            }
            else{
              div.style.background = "#b3e5fc";
            }
            

            $("#list")[0].appendChild(div);
          }
        } else {
          var div = document.createElement("div");
          div.classList.add("object_object");
          div.innerHTML = "<b>" + element.Name + "</b><br>";
          if(i%2==1){
              div.style.background = "#e6ffff";
            }
            else{
              div.style.background = "#b3e5fc";
            }

          $("#list")[0].appendChild(div);
        }
      });
    }
    get_data();
    function get_data() {
      getItems(items => {
        print_data(items);
      });
    }
  </script>
  <input
    type="search"
    name="search"
    id="search"
    onkeyup="get_data();"
    placeholder="Search..."
  />
  <br>
  <br>
  <div style="color:black;" id="list"></div>

  <button id="delete" onclick="removeMyItems(a=>{});location.reload();">
    Delete my Items
  </button>
  
</div>
