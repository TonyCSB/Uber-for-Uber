<% include ../../sections/head %>

<div class = "blur">

    <div class = "center" onload="run">

        <h2 id="title" style="text-align:center">Welcome! </h2>
        <input id = 'in' placeholder="What dorm are you in?">
        <button onclick="updateUser()">
            Join
        </button>

    </div>

</div>

<script>

    $.post( "/home/getUserProfile", {}, (data, status) => {
        $("#title")[0].innerText = "Welcome, "+data.name+"!";
    });

    var updateUser = () => {

        $.post("/home/setUserDorm", {Location: $('#in')[0].value }, (data, status) => {
            window.location = '/home';
        });

    }    

</script>

<style>

    .blur{
        position: absolute;
        background-image: url("/assets/marylandBlur2.png");
        background-size:cover;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
    }

    .center {

        background-color: rgba(255, 255, 255, 0.678);
        border-radius: 10px;
        position: absolute;
        
        left: 30%;
        width: 40%;
        top: 35%;
        height: 30%;
    }

    button, input{
        width: 60%;

        border-radius: 10px;
        height: 20%;
        border: none;
        background-color: rgba(255, 255, 255, 0.473);
        margin-top: 2%;
        margin-left: 20%;
        transition: all 0.2s ease-in;
    }
    button:hover{
        background-color: rgba(255, 255, 255, 0.884);
    }

    input {
        padding-left: 10%;
        width: 50%;
        }

</style>